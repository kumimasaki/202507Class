package lesson3_2.lamda_ex;

public class Ex2 {

	public static void main(String[] args) {
		// ラムダ式の書き方
//		Introduce i = (String name, String hobby) -> {
//			String hello = "name:" + name + " hobby:" + hobby;
//			return hello;
//		};
		
		// ラムダ式の省略形
		Introduce i = (name, hobby) -> {
			String hello = "name:" + name + " hobby:" + hobby;
			return hello;
		};

		// 呼び出し
		System.out.println(i.intro("Alice", "Game"));
	}
}
