package lesson3_2.practice5;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class MenuManager {

	//	map = {
	//	  "sandwich" : ["ハンバーガー", "チーズバーガー"],
	//	  "drink"    : ["コーラ", "ミネラルウォーター"],
	//	  "sidemenu" : ["ポテト", "ナゲット"]
	//	}
	//	private Map<String, List<String>> map = new HashMap<>();

	// ここにフィールドを追加
	private Map<String, List<String>> map = new HashMap<>();

	// コンストラクタ
	public MenuManager() {
		// サンドイッチメニューの登録
		// リストを宣言し、下記のメニューを追加
		List<String> sandwitchList = new ArrayList<>();

		// ハンバーガー、チーズバーガー、ダブルチーズバーガー
		sandwitchList.add("ハンバーガー");
		sandwitchList.add("チーズバーガー");
		sandwitchList.add("ダブルチーズバーガー");
		// メンバ変数のmapにlistを追加。キー名は「sandwitch」
		map.put("sandwich", sandwitchList);
		// ドリンクメニューの登録
		// リストのインスタンスを作成し、下記のメニューを追加
		List<String> drinkList = new ArrayList<>();
		// コーラ、オレンジジュース、ミネラルウォーター
		drinkList.add("コーラ");
		drinkList.add("オレンジジュース");
		drinkList.add("ミネラルウォーター");
		// メンバ変数のmapにlistを追加。キー名は「drink」
		map.put("drink", drinkList);

		// サイドメニューの登録
		// リストのインスタンスを作成し、下記のメニューを追加
		List<String> sidemenuList = new ArrayList<>();
		// フライドポテト、チキンナゲット、フレッシュサラダ
		sidemenuList.add("フライドポテト");
		sidemenuList.add("チキンナゲット");
		sidemenuList.add("フレッシュサラダ");
		// メンバ変数のmapにlistを追加。キー名は「sidemenu」
		map.put("sidemenu", sidemenuList);

	}

	// ここにsearchMenuを作成
	public void searchMenu(String menu) {
		for (String key : map.keySet()) {
			if (map.get(key).contains(menu)) {
				System.out.println(menu + "は" + key + "に含まれています。");
				return;
			}
		}
		System.out.println("該当するメニューはありません。");
	}

	// ここにsetMenuを作成
	public void setMenu(String category, String menu) {
		// map.get(category):指定したカテゴリに対応するメニュー一覧（List）を取得
		map.get(category).add(menu);
	}

	// ここに showMenu を作成する。
	public void showMenu(String category) {
		System.out.println(map.get(category));
	}
}